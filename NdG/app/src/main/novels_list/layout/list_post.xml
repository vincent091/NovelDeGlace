<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_top"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#E5E5E5"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="6dp"
    card_view:contentPadding="5dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

        <ImageView
            android:id="@+id/picture_novel"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="@drawable/background_generic"
            android:contentDescription="@null"
            android:scaleType="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/picture_novel"
            android:gravity="center_vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/date_novel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="@tools:sample/date/ddmmyy"/>

            <TextView
                android:id="@+id/title_novel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_novel"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="@tools:sample/lorem"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>